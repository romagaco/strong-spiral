---
const {pageTitle} =  Astro.props;
import { getStaticPaths } from "../pages/en/movies/[...title].astro";



const allpages = getStaticPaths();
---	


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<link rel="stylesheet" href="src/styles/global.css" />
	</head>
	<body>
		<slot />
		<nav>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/about">About</a></li>
				{allpages.map(movie => {
					return (<li><a href=`/movies/${movie.params.title}`>{movie.props.pageTitle}</a></li>)
				})}
			</ul>
		</nav>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
